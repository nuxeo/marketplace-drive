<project name="drive-assembly" default="build" xmlns:nx="urn:nuxeo-build" xmlns:artifact="urn:nuxeo-artifact">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml" uri="urn:nuxeo-artifact" />

  <target name="init" unless="init.done">
    <property name="outdir" value="${maven.project.build.directory}" />
    <property name="nuxeo.nxr" value="${outdir}/nuxeo.nxr" />

    <antcall target="expand" />
    <property name="init.done" value="true" />
  </target>

  <target name="expand">
    <artifact:nuxeo-expand includeTestScope="true" groupPrefixes="org.nuxeo" />
    <artifact:print output="${outdir}/artifacts-nuxeo-drive.properties" mode="sdk" />
    <artifact:print output="${outdir}/test-artifacts-nuxeo-drive.properties" mode="sdk" scopes="test" />
    <artifact:print output="${outdir}/dependency-tree.log" />
  </target>

  <target name="build" depends="init" description="Build Nuxeo Drive NXR">
    <echo level="info">Building default Nuxeo Drive NXR</echo>
    <delete failonerror="false" dir="${nuxeo.nxr}" />
    <mkdir dir="${nuxeo.nxr}" />
    <antcall target="build-standard" />
  </target>

  <target name="build-standard" description="Build default distribution" depends="init">
    <copy todir="${nuxeo.nxr}/bundles" overwrite="true">
      <artifact:set>
        <includes>
          <artifact groupId="org.nuxeo*" scope="!test" type="!pom" />
        </includes>
        <excludes>
          <artifact groupId="org.nuxeo.lib*" />
        </excludes>
      </artifact:set>
    </copy>

    <antcall target="third-party-libraries" />

    <copy file="${outdir}/artifacts-nuxeo-drive.properties" todir="${nuxeo.nxr}" />
    <copy file="${outdir}/test-artifacts-nuxeo-drive.properties" todir="${nuxeo.nxr}" />

    <zip destfile="${outdir}/${maven.project.artifactId}-${maven.project.version}.zip" basedir="${nuxeo.nxr}" />
    <artifact:attach file="${outdir}/${maven.project.artifactId}-${maven.project.version}.zip" type="zip" />
  </target>

  <target name="third-party-libraries">
    <copy todir="${nuxeo.nxr}/lib" overwrite="true">
      <artifact:set>
        <includes>
          <artifact groupId="!org.nuxeo*" scope="!test" />
          <artifact groupId="org.nuxeo.lib*" scope="!test" />
        </includes>
      </artifact:set>
    </copy>
    <nx:rmdups dir="${nuxeo.nxr}/lib" />
  </target>

</project>
